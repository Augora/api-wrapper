{
  "name": "lbp-wrapper",
  "version": "0.3.0",
  "description": "La bete politique utilities for API calling :)",
  "main": "dist/index.js",
  "author": "Kevin BACAS",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist/",
    "lint": "tslint --project tslint.json",
    "build": "npm run clean && webpack --config webpack.config.js -p",
    "test": "npm run lint",
    "start": "webpack-dev-server --config webpack.config.dev.js --open --hot",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@types/normalizr": "^2.0.18",
    "axios": "^0.15.3",
    "normalizr": "^3.2.2",
    "rxjs": "^5.2.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "jest": "^19.0.2",
    "regenerator-runtime": "^0.10.3",
    "source-map-loader": "^0.2.0",
    "ts-jest": "^19.0.3",
    "tslint": "^4.5.1",
    "tslint-config-airbnb": "^1.1.1",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
